
<div class="frontrow">
    <div class="intro">
        <h1>Rails 4 Generator</h1>
        <h4><small style="color:black;"> The simple and easy way to make a rails 4 project.</small></h4>
        <h4><strong>Give it a try now. No coding experience required!</strong>  </h4><br /><br /><br /><br /><br /><br /><br /><br />
        <% if current_user.nil? %>
        <h4><strong style="color:white;">Application name</strong></h4>
        <% end %>
    </div>
    <% if current_user.nil? %>
    <div class="span6">
        <%= form_tag("/create_app") do %>
        <%= text_field_tag(:application_name,@aname,class: "input") %>
        <%= submit_tag "Create Application", class: "btn btn-primary",id:"signupz" %>
        <% end %>
    </div>
    <% else %>
    <div class="span6 info" style="color:white;">
        <h4>Signed in as <strong>Guest!</strong></h4>
        <h4>Application name: <%= app_name %> </strong></h4>
    </div>
    <% end %>
</div>
<div class="well" style="text-align:center;">
    <h2> About this site</h2>
</div>
<div class="well" style="text-align:center;">
    <h2> Meet the team</h2>
</div>
